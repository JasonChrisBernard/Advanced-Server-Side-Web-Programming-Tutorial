<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>All movies</title>
    </head>
    <body>
        <%- include('../partials/menu') %>

        <h1>All Movies</h1>

        <% if(!movies || movies.length === 0) { %>
            <p>No movies found.</p>
        <% } else { %>
            <ul style="max-width:600px;margin:1em auto;padding:0;list-style:none;">
                <% movies.forEach(m => { %>
                    <li style="padding:.5em 0;border-bottom:1px solid #ddd;">
                        <strong><%= m.title %></strong>
                        (<%= m.release_year %>) - 
                        directed by <%= m.director %>
                        genre:
                        <a href="/movies/<%= m.genre %>"><%= m.genre %></a>,
                        rating: <%= m.imdb_rating %>
                    </li>
                <% }) %>
            </ul>
        <% } %>

        </body>
</html>